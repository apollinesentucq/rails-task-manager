<h1>Tasks#index</h1>
<%= link_to "Add a task", new_task_path %>
<ol>
  <% @tasks.each do |task| %>
    <li><%= link_to task.title, task_path(task) %>
    <br>
    <%= link_to "Edit", edit_task_path(task) %> | <%= link_to "Delete", task_path(task), method: :delete, data: { confirm: "Are you sure?" } %></li>
<% end %>
</ol>

